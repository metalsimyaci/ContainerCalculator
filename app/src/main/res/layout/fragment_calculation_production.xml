<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/calculation_product_margin"
    android:padding="@dimen/calculation_product_padding"
    tools:context="com.hasanural.Fragements.Calculation_production_Fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cal_product_action_bar"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_select_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_select"
            android:layout_margin="@dimen/calculation_product_button_margin"
            android:padding="@dimen/calculation_product_button_padding"
            android:layout_weight="1"
            android:text="@string/calculation_product_button_select"
            />
        <Button
            android:id="@+id/btn_clear_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/calculation_product_button_margin"
            android:padding="@dimen/calculation_product_button_padding"
            android:layout_weight="1"
            android:background="@drawable/btn_close"
            android:text="@string/calculation_product_button_clear"
            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cal_prd_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cal_product_action_bar"
        android:layout_marginTop="0dp" />
</RelativeLayout>