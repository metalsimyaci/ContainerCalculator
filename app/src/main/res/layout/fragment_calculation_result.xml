<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/calculation_result_margin"
    android:padding="@dimen/calculation_result_padding"
    tools:context="com.hasanural.Fragements.Calculation_result_Fragment">
    <TextView
        android:id="@+id/cal_res_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result Summary"
        android:paddingTop="10dp"
        android:textColor="@color/colorSecondaryText"
        android:textSize="25sp"
        />
    <LinearLayout
        android:id="@+id/cal_res_summary_layout"
        android:layout_below="@id/cal_res_title"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TotalContainerCount"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/colorSecondaryText"
                />
            <TextView
                android:id="@+id/cal_res_totalContainerCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText"
                android:hint="0"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Percent Container Volume Packed"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/colorSecondaryText"
                />
            <TextView
                android:id="@+id/cal_res_percentContainerVolumePacked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText"
                android:hint="0"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Percent Item Volume Packed"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/colorSecondaryText"
                />
            <TextView
                android:id="@+id/cal_res_percentItemVolumePacked"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText"
                android:hint="0"
                />
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Packages"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/colorSecondaryText"
            />
        <TextView
            android:id="@+id/cal_res_totalPackages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="textEnd"
            android:textColor="@color/colorSecondaryText"
            android:hint="0"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Packed Items Count"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/colorSecondaryText"
                />
            <TextView
                android:id="@+id/cal_res_packedItemsCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText"
                android:hint="0"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Packed Items Volume"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/colorSecondaryText"
                />
            <TextView
                android:id="@+id/cal_res_packedItemsVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText"
                android:hint="0"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unpacked Items Count"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="@color/colorSecondaryText"
                />
            <TextView
                android:id="@+id/cal_res_unPackedItemsCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText"
                android:hint="0"
                />
        </LinearLayout>

       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:textColor="@color/colorSecondaryText"
           android:text="Save Order"
           />
    </LinearLayout>
</RelativeLayout>