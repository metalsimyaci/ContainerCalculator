<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dialog_container_padding"
    android:layout_margin="@dimen/dialog_container_margin"
>
    <TextView
        android:id="@+id/container_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calculation_container_title_add_dialog"
        android:textColor="@color/colorSecondaryText"
        android:padding="@dimen/calculation_container_title_padding"
        android:textSize="@dimen/calculation_container_title_text_size"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_dialog_title"
        android:id="@+id/container_dialog_layout_definition"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/defination_item_title_text_size"
                android:textColor="@color/colorSecondaryText"
                android:textAlignment="textEnd"
                android:text="@string/container_definition_name" />


            <EditText
                android:id="@+id/cal_con_te_container_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/container_definition_name"
                android:inputType="text"
                android:padding="@dimen/calculation_container_edit_item_padding"
                android:singleLine="true"
                android:selectAllOnFocus="true"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText" >

            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/defination_item_title_text_size"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText"
                android:text="@string/container_definition_color" />

            <Spinner
                android:id="@+id/cal_con_sp_container_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:padding="@dimen/calculation_container_edit_item_padding"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_dialog_layout_definition"
        android:id="@+id/container_dialog_layout_measurement"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/defination_item_title_text_size"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText"
                android:layout_weight="1"
                android:text="@string/container_definition_length" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/defination_item_title_text_size"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText"
                android:text="@string/container_definition_width" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/defination_item_title_text_size"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText"
                android:text="@string/container_definition_height" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/cal_con_te_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/container_definition_length"
                android:inputType="number"
                android:padding="@dimen/calculation_container_edit_item_padding"
                android:singleLine="true"
                android:selectAllOnFocus="true"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText" />
            <EditText
                android:id="@+id/cal_con_te_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/container_definition_width"
                android:inputType="number"
                android:padding="@dimen/calculation_container_edit_item_padding"
                android:singleLine="true"
                android:selectAllOnFocus="true"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText" />
            <EditText
                android:id="@+id/cal_con_te_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/container_definition_height"
                android:inputType="number"
                android:padding="@dimen/calculation_container_edit_item_padding"
                android:selectAllOnFocus="true"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_dialog_layout_tolerance_header"
        android:layout_below="@id/container_dialog_layout_measurement"
        android:padding="@dimen/calculation_container_title_inline_padding"
        android:textSize="@dimen/calculation_container_title_inline_text_size"
        android:textColor="@color/colorSecondaryText"
        android:text="@string/calculation_container_title_tolerance" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_dialog_layout_tolerance"
        android:layout_below="@id/container_dialog_layout_tolerance_header"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/defination_item_title_text_size"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText"
                android:text="@string/container_definition_tolerance_length" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/defination_item_title_text_size"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText"
                android:text="@string/container_definition_tolerance_width" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/defination_item_title_text_size"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText"
                android:text="@string/container_definition_tolerance_height" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/cal_con_te_tolerance_length"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/container_definition_tolerance_length"
                android:inputType="number"
                android:padding="@dimen/calculation_container_edit_item_padding"
                android:singleLine="true"
                android:selectAllOnFocus="true"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText" />
            <EditText
                android:id="@+id/cal_con_te_tolerance_width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/container_definition_tolerance_width"
                android:inputType="number"
                android:padding="@dimen/calculation_container_edit_item_padding"
                android:singleLine="true"
                android:selectAllOnFocus="true"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText" />
            <EditText
                android:id="@+id/cal_con_te_tolerance_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/container_definition_tolerance_height"
                android:inputType="number"
                android:padding="@dimen/calculation_container_edit_item_padding"
                android:selectAllOnFocus="true"
                android:textAlignment="textEnd"
                android:textColor="@color/colorSecondaryText" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/cal_con_tw_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/container_dialog_layout_tolerance"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/container_dialog_button_select"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/dialog_button_add"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:background="@drawable/btn_add"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/container_dialog_button_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_button_cancel"
            android:background="@drawable/btn_close"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>